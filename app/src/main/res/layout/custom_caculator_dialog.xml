<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
      android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14sp"
      android:textColor="@color/black0"
      android:text="预期收益"/>

    <ImageView
        android:id="@+id/iv_dismis"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/close_pic"
       />
    
    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:text="0.00"/>
    <LinearLayout
        android:id="@+id/rl_01"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/layout_corner"
        android:layout_below="@id/tv_income"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/gray4"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="13sp"
            android:text="买入金额"/>
        <EditText
            android:id="@+id/et_maxFinancing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:gravity="right|center_vertical"
            android:background="@null"
            android:numeric="integer"
            android:maxLength="10"
            android:textColor="@color/gray"
            android:textSize="13sp"
            />
         <TextView
             android:layout_marginRight="8dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/gray"
             android:textSize="13sp"
             android:text="元"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_02"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rl_01"
        android:background="@drawable/layout_corner"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/gray4"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="13sp"
            android:text="买入天数"/>
        <EditText
            android:id="@+id/et_lockTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:enabled="false"
            style="@style/edit_style"
            android:hint=""/>
        <TextView
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:text="天"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_03"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rl_02"
        android:gravity="center_vertical"
        android:background="@drawable/layout_corner"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/gray4"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="13sp"
            android:text="预期收益率"/>
        <EditText
            android:id="@+id/et_expectedRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:enabled="false"
            style="@style/edit_style"
            android:hint=""/>
        <TextView
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:text="%"/>
    </LinearLayout>
  <Button
      android:id="@+id/btn_count"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="20dp"
      android:layout_width="240dp"
      android:layout_height="30dp"
      android:layout_below="@id/rl_03"
      android:layout_centerHorizontal="true"
      android:background="@drawable/dialog_btn"
      android:textSize="14sp"
      android:textColor="@color/orange"
      android:text="计算"/>
</RelativeLayout>