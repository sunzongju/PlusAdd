<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgro"
    android:orientation="vertical">

    <include layout="@layout/tab_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/gray"
                android:text="项目金额（元）" />

            <TextView
                android:id="@+id/tv_maxFinancing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sum"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:text="" />
        </RelativeLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="61dp"
            android:layout_gravity="center_vertical"
            android:background="@color/backgro" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/gray"
                android:text="预期年化收益率" />

            <TextView
                android:id="@+id/tv_expectedRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rate"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:text="" />
        </RelativeLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="61dp"
            android:layout_gravity="center_vertical"
            android:background="@color/backgro" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="71dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/gray"
                android:text="锁定期（天）" />

            <TextView
                android:id="@+id/tv_lockTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_days"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:text="" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="11dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dollar_lab" />

        <TextView
            android:id="@+id/tv_restAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="剩余可投金额" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginTop="11dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="加入条件" />

            <TextView
                android:id="@+id/tv_joinCondition"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray"
                android:text="100元起，100元整数倍递增" />
        </RelativeLayout>
      <TextView
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/backgro"
          />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
           >

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="计息方式" />

            <TextView
                android:id="@+id/tv_interestDate"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray"
                android:text="T+1" />
        </RelativeLayout>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgro"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
           >

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="还款方式" />

            <TextView
                android:id="@+id/tv_repayType"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray"
                android:text="到期还本付息" />
        </RelativeLayout>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgro"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
           >

            <TextView
                android:id="@+id/tv_safelable"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="安全保障" />

            <TextView
                android:id="@+id/tv_safeguardMode"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray"
                android:text="本金保障" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_detail"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:text="查看详情" />
    <LinearLayout
        android:layout_marginTop="37dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_cal"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="13dp"
            android:src="@drawable/calculate_pic" />
        <Button
            android:id="@+id/btn_join"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/button_no"
            android:clickable="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="售罄" />
    </LinearLayout>
</LinearLayout>