<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_type"
            android:layout_marginLeft="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="乘10计划B（043期）"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_marginLeft="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_expectedRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:includeFontPadding="false"
                android:textColor="@color/orange"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="13sp"
                android:text="%"/>
        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:text="预期年化收益率" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/pro_rate"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="13dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:minHeight="1dp"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="13dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#999999"
            android:textSize="13sp"
            android:text="投资期限0个月" />
            <TextView
                android:id="@+id/tv_content2"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="#999999"
                android:textSize="13sp"
                android:text="项目规模100万" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_repaytype"
            android:layout_marginRight="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="11sp"
            android:text="按月付息" />

        <TextView
            android:id="@+id/btn_invest"
            android:layout_width="52dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:layout_below="@id/tv_repaytype"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/button_press"
            android:textSize="14sp"
            android:text="投资"
            android:textColor="@color/white" />
    </RelativeLayout>


</LinearLayout>